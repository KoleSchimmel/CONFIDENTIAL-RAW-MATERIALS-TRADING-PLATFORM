{
  "name": "confidential-raw-materials-trading",
  "version": "1.0.0",
  "description": "Confidential Raw Materials Trading Platform - FHEVM Example Implementation",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:verbose": "hardhat test --show-stack-traces",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "initialize:sepolia": "hardhat run scripts/initialize.ts --network sepolia",
    "monitor:events": "hardhat run scripts/monitor-events.ts --network sepolia",
    "console:local": "hardhat console --network localhost",
    "console:sepolia": "hardhat console --network sepolia",
    "generate-docs": "ts-node scripts/generate-docs.ts",
    "create-example": "ts-node scripts/create-fhevm-example.ts",
    "create-category": "ts-node scripts/create-fhevm-category.ts",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "fhe",
    "fhevm",
    "privacy",
    "marketplace",
    "trading",
    "cryptography",
    "zama"
  ],
  "author": "Raw Materials Trading Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^11.0.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.0.0",
    "chai": "^4.3.7",
    "ethers": "^6.7.1",
    "hardhat": "^2.20.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "dotenv": "^16.0.3"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
